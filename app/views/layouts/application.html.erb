<!DOCTYPE html>
<html>
<head>
  <title>Smashitt</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<nav>
  <% if flash[:notice] %>
      <h2><div class="notice"><%= flash[:notice] %></div></h2>
  <% end %>
  <% if current_user %>
      <h3>Smashitt, where you come to break stuff, <%= current_user.name %>!</h3>
      <%= link_to "Logout", login_path, method: "delete" %>
  <% else %>
      <%= link_to "Login", login_path %>
      <%= link_to "Sign Up", signup_path %>
  <% end %>
</nav>

<%= yield %>

</body>
</html>
